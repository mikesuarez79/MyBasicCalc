    >
    
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
    	android:gravity="center"
        >
    
	    <TextView
	        android:id="@+id/tvDisplay"
	        android:layout_width="wrap_content"
